@model Product

<h2>Details for @Model.Name</h2>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="ProductId"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.ProductId
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Name"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            <label asp-for="ShortDescription"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.ShortDescription
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Description"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Price"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Price
        </dd>
       
        <dt class="col-sm-2">
            <label asp-for="InStock"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.InStock
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Category.Name"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Category.Name
        </dd>

        <dt class="col-sm-2">
            <label asp-for="ImageThumbnailUrl"></label>
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.ImageThumbnailUrl" width="300" height="150" />
        </dd>
        <dt class="col-sm-2">
            <label asp-for="ImageUrl"></label>
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.ImageUrl" width="300" height="150" />

        </dd>
    </dl>
</div>
<div>
    <a asp-controller="Product" asp-action="Index">Back to overview</a>
</div>